<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>Apartment</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>epam.booking_apartment.controller.servlet.MyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <filter>
        <init-param>
            <param-name>charsetEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <filter-name>charsetFilter</filter-name>
        <filter-class>epam.booking_apartment.filter.CharSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>charsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>restFilter</filter-name>
        <filter-class>epam.booking_apartment.filter.RestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>restFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>